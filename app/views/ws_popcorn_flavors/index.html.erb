<div class="container-fluid">
  <% if user_signed_in? && current_user.ws_cust? %>
<h1>Popcorn Flavors/ Wholesale Prices</h1>
   
  <table class="table table-striped table-bordered table-responsive">
    <thead>
      <tr>
        <th class="bg-primary">Flavor</th>
        <th class="bg-primary">Sm Bag</th>
        <th class="bg-primary">Lg Bag</th>
        <th class="bg-primary">One Gal Tin</th>
        <th class="bg-primary">Two Gal Tin</th>
        <th class="bg-primary">3 1/2 Gal Tin</th>
        <th class="bg-primary">6 1/2 Gal Tin</th>
        <th class="bg-primary"></th>
      </tr>
    </thead>
    <tbody>
    <% @ws_flavors.each do |flavor| %>
      <tr>
        <td><a href="/ws_popcorn_flavors/<%= flavor.id %>"><%= flavor.name %></a><br><% if current_user.admin %><button><a href="/ws_popcorn_flavors/<%= flavor.id %>/edit">Edit</a></button>&nbsp;<a data-confirm="Are you sure?" data-method="delete" href="/products/<%= flavor.id %>" rel="nofollow"><button type="button" class="btn btn-danger">Delete Product</button></a><% end %>&nbsp;&nbsp;&nbsp;<img src="<%= flavor.photo %>" height="65"></td>
        <%= form_for @carted_product do |f| -%>
        <td>$<%= flavor.sm_bag %><br><%= f.label :sm_bag_qty %><br>
        <%= f.text_field  :sm_bag_qty, :size => 3 %>
        <%= f.hidden_field :product_id, value: flavor.id %>
        </td>
        <td>$<%= flavor.lg_bag %><br><%= f.label :lg_bag_qty %><br>
        <%= f.text_field  :lg_bag_qty, :size => 3 %>
        <%= f.hidden_field :product_id, value: flavor.id %>
        </td>
        <td>$<%= flavor.one_gal_tin %><br><%= f.label :one_gal_tin_qty %><br>
        <%= f.text_field  :one_gal_tin_qty, :size => 3 %>
        <%= f.hidden_field :product_id, value: flavor.id %>
        </td>
        <td>$<%= flavor.two_gal_tin %><br><%= f.label :two_gal_tin_qty %><br>
        <%= f.text_field  :two_gal_tin_qty, :size => 3 %>
        <%= f.hidden_field :product_id, value: flavor.id %>
        </td>
        <td>$<%= flavor.three_and_half_tin %><br><%= f.label :three_half_tin_qty %><br>
        <%= f.text_field  :three_half_tin_qty, :size => 3 %>
        <%= f.hidden_field :product_id, value: flavor.id %>
        </td>
        <td>$<%= flavor.six_and_half_tin %><br><%= f.label :six_half_tin_qty %><br>
        <%= f.text_field  :six_half_tin_qty, :size => 3 %>
        <%= f.hidden_field :product_id, value: flavor.id %></td>
          <td><%= f.submit "ADD To Cart" %>
        <% end -%></td>
      </tr>
      <% end %>
    </tbody>
  </table>
  <% end %>
<div>