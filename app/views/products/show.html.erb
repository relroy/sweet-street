<div class="container-fluid">

<h1><%= @product.name %></h1>



<center class="img-thumbnail"><%= image_tag @product.photo %></center><br />
<h3><%= @product.description %></h3>


<% @product.popcorn_flavors.each do |flavor| %>
<div class="col-md-3">
<p><a href="/popcorn_flavors/<%= flavor.id %>"><%= flavor.name %></a></p>

</div>
<% end %>





</div>