<div class = "container-fluid" >
  <h1>Thanksgiving Items</h1>

  <% if user_signed_in? && current_user.admin? %> 
    <button type="button" class="btn btn-success"><a href="/christmas_items/new"><h5>ADD A NEW Thanksgiving Item</h5></a></button>
  <% end %>

<% @thanksgiving_items.each do |item| %>
  <div class="col-md-3 col-sm-3 col-xs-12 bor">
    <p><%= item.name %></p>
    <p><img src='<%= item.photo %>'  height="140" width="auto" class="thumbnail"></p>
    <p><%= item.description %></p>
    <% if user_signed_in? && current_user.admin? %>
      <button><%= link_to 'EDIT Product', edit_thanksgiving_item_path(item.id) %></button>
      <a data-confirm="Are you sure?" data-method="delete" href="/thanksgiving_items/<%= item.id %>" rel="nofollow"><button type="button" class="btn btn-danger">Delete Thanksgiving Item</button></a>
    <% end %>
  </div>
<% end %>
</div>