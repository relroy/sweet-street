              <ul><a href="">Bags</a></ul>         
            <li><a href="">Truffles</a></li>           
            <li><a href="" >Chocolate Dipped Strawberries<img src="/assets/Choc-dip-strawberry.jpg" alt="HTML5 Icon" style="width:35px;height:40px"></a></li>

            <li><a href="">Chewy candy</a></li>
            <li><a href="">Sour candy</a></li>
            <li><a href="">Retro candy</a></li>
            <li><a href="">Chewy candy</a></li>
            <li><a href="">Nuts</a></li>
            <li><a href="">Chocolate candies</a></li>
            <li><a href="">Caramel Apples<img src="/assets/caramel-apple.jpg" alt="HTML5 Icon" style="width:35px;height:50px"></a></li>
            <li><a href="">Candy Bars<img src="/assets/kitkat.png" alt="HTML5 Icon" style="width:70px;height:35px"></a></li>
            
          </ul>
        </li>
      </ul>
      
      <ul class="nav navbar-nav navbar-right">
        <li class="dropdown">
          <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false">Links <span class="caret"></span></a>
          <ul class="dropdown-menu" role="menu">
            <% if user_signed_in? %>
            <li><a href="/users/edit">Update my Account Info</a></li>
            <% end %>
            <% if user_signed_in? && current_user.admin? %>
            <li><a href="/admins">Administration</a></li>
            <% end %>
              <% if user_signed_in? && current_user.ws_cust? %>
                <li><a href="/reservations/new" class="glyphicon glyphicon-thumbs-up"> Make an Order</a></li>
                <li><a href="/users/<%= current_user.id %>">View my Orders</a></li>
                <li>
                  <a href="#">
                    <i class="glyphicon glyphicon-shopping-cart" title="Shopping Cart"></i>
                      <span class="hidden-sm hidden-xs">
                        Shopping Cart
                      </span>
                  </a>
                </li>
                <li>
                  <a href="#">
                    <i class="fa fa-crosshairs" title="Checkout"></i>
                    <span class="hidden-sm hidden-xs">
