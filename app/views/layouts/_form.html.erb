<div class= 'container-fluid'>
<%= form_for @layout do |f| %>
  <div class ="row">

  <div class="panel-heading">
      <h3 class="panel-title">Active?</h3>
    </div>
      <div class="panel-body">
        <%= f.label :active %>
        <%= f.check_box :active, true, false %>
        
      </div>
  </div>
    
  <div class="panel-heading">
      <h3 class="panel-title">Photo</h3>
    </div>
      <div class="panel-body">
        <%= f.label :photo %>
        <%= f.file_field :photo %><br>
        <p>Current Photo</p>
        <%= image_tag @layout.photo_url , class: "img-responsive" %>
      </div>
  </div>
  <%= f.submit %>
<% end %>
</div>